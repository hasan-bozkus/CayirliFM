<script type="text/javascript">

$(document).ready(() => {

    var connection = new signalR.HubConnectionBuilder().withUrl("/contacthub").build();

    connection.start().then(() => {
        setInterval(() => {
                connection.invoke("ContactProcess");
        }, 5000);
    });

            connection.on("GetContactRequestCount", (getContactRequestCount) => {
                        $("#getContactRequestCount").text(getContactRequestCount);
            });

             connection.on("GetReplyToContactCount", (getReplyToContactCount) => {
                  $("#getReplyToContactCount").text(getReplyToContactCount);
            });

});  
</script>

