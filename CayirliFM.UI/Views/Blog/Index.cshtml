@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@using X.PagedList
@model IPagedList<News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UserLayout/_UserLayout.cshtml";
}

<!--- albums -->
<div class="albums agile-blog">
    <div class="container">
        <h2 class="agile-title">Haberlerimiz</h2>

        @foreach (var item in Model)
        {
            <div class="col-md-6 w3lsalbums-grid">
                <div class="albums-w3top">
                    <h5> @item.NewsCreatedAtTime.ToString("dd MMMM yyyy") </h5>
                </div>
                <div class="albums-left">
                    <a href="/Blog/NewsReadAll/@item.NewsID" style="background:url(@item.NewsSubImage)no-repeat center; background-size:cover;" class="wthree-almub">
                    </a>
                </div>
                <div class="albums-right">
                    <h4><a href="/Blog/NewsReadAll/@item.NewsID">@item.NewsTitle</a></h4>
                    <p>@item.NewsSubDescrpition.</p>
                    <a class="w3more" href="/Blog/NewsReadAll/@item.NewsID"><i class="fa fa-mail-forward" aria-hidden="true"></i> Devamını Oku</a>
                </div>
                <div class="clearfix"></div>
            </div>
        }


        <div class="clearfix"></div>

        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}), new PagedListRenderOptions
        {
            LinkToFirstPageFormat = "<<",
                LinkToLastPageFormat = ">>",
                LinkToNextPageFormat = ">",
                LinkToPreviousPageFormat = "<",
                ContainerDivClasses = new[] { "pagination", "w3-agileits-paging" },
                LiElementClasses = new[] { "page-item" },
                ActiveLiElementClass = "active"
         })

    </div>
</div>
<!--- //albums -->
