@model CreateLoginAppUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Çayırlı FM - Yönetim Paneli Girişi </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/focus-2/images/favicon.png">
    <link href="~/focus-2/css/style.css" rel="stylesheet">

</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container-fluid h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <h4 class="text-center mb-4">Çayırlı FM Girişi</h4>
                                    <form method="post">
                                        <div class="form-group">
                                            <label><strong>E-Posta veya Kullanıcı Adı</strong></label>
                                            <input type="text" asp-for="EmailOrUserName" class="form-control" placeholder="E-Posta veya Kullanıcı Adı">
                                        </div>
                                        <div class="form-group">
                                            <label><strong>Parola</strong></label>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="Parola">
                                        </div>
                                       
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                                        </div>
                                    </form>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/focus-2/vendor/global/global.min.js"></script>
    <script src="~/focus-2/js/quixnav-init.js"></script>
    <script src="~/focus-2/js/custom.min.js"></script>

</body>

</html>