@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-xl-12 col-xxl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Kategoriyi Güncelle</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="post">

                        <input type="hidden" asp-for="CategoryID" />

                        <div class="form-group">
                            <input type="text" asp-for="CategoryName" class="form-control input-rounded " placeholder="Kategori Adı">
                        </div>
                        <div class="form-group">
                            <input type="datetime" asp-for="CategoryCreatedAtTime" class="form-control input-rounded " placeholder="Kategori Adı">
                        </div>
                        <div class="form-group">
                            <textarea asp-for="CategoryDescription" class="form-control" rows="4" id="comment" placeholder="Kategori Açıklaması"></textarea>
                        </div>
                        <div class="form-group">
                            <select asp-for="CategoryStatus" class="form-control">
                                <option value="">Seçiniz...</option>
                                <option value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

