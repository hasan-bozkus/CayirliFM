@model List<ResultWelcomeToOurSiteDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


@section Scripts {
<!-- Datatable ~/focus-2 -->
<script src="~/focus-2/vendor/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/focus-2/js/plugins-init/datatables.init.js"></script>
<link href="~/focus-2/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Basic Datatable</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="display" style="min-width: 845px">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Durumu</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                count++;

                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    @if(item.Status == "Onay Bekliyor")
                                    {
                                        <td><a href="/Admin/AdminWelcomeToOurSite/ChangeToApproved/@item.WelcomeID" class="btn btn-rounded btn-outline-info">Onay Bekliyor</a></td>
                                    }
                                    @if(item.Status == "Onaylandı")
                                    {
                                        <td><a href="/Admin/AdminWelcomeToOurSite/ChangeToDeApproved/@item.WelcomeID" class="btn btn-rounded btn-outline-success">Onaylandı</a></td>
                                    }
                                    @if(item.Status == "Onaylanmadı")
                                    {
                                        <td><a href="/Admin/AdminWelcomeToOurSite/ChangeToApproved/@item.WelcomeID" class="btn btn-rounded btn-outline-dark">Onaylanmadı</a></td>
                                    }
                                    <td><a href="/Admin/AdminWelcomeToOurSite/DeleteWelcomeToOurSite/@item.WelcomeID" class="btn btn-rounded btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminWelcomeToOurSite/UpdateWelcomeToOurSite/@item.WelcomeID" class="btn btn-rounded btn-outline-warning">Güncelle</a></td>
                                    </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Durumu</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </tfoot>
                    </table>
                    <a href="/Admin/AdminWelcomeToOurSite/CreateWelcomeToOurSite" class="btn btn-rounded btn-outline-primary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

