@model CreateSocialMediaAcconutDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12 col-xxl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yeni Sosyal Medya Kümesi Ekle</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="post">
                        <div class="form-group">
                            <input type="text" asp-for="Icon" class="form-control input-rounded " placeholder="Hesap İkonu İkonu" />
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="SocialMediaName" class="form-control input-rounded " placeholder="Hesap Adı" />
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="SocialMediaUrl" class="form-control input-rounded " placeholder="Hesap Linki" />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

