@model List<ResultAddressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


@section Scripts {
    <!-- Datatable ~/focus-2 -->
    <script src="~/focus-2/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/focus-2/js/plugins-init/datatables.init.js"></script>
    <link href="~/focus-2/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Stratejilerimiz</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="display" style="min-width: 845px">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kısa Konum</th>
                                <th>E-Posta</th>
                                <th>Telefon</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;

                                <tr>
                                    <td>@count</td>
                                    <td>@item.SubLocation</td>
                                    <td>@item.EMail</td>
                                    <td>@item.Phone</td>
                                    <td><a href="/Admin/AdminAddress/DeleteAdress/@item.AddressID" class="btn btn-rounded btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/AdminAddress/UpdateAddress/@item.AddressID" class="btn btn-rounded btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Kısa Konum</th>
                                <th>E-Posta</th>
                                <th>Telefon</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <a href="/Admin/AdminAddress/CreateAdress" class="btn btn-rounded btn-outline-primary"> Yeni Adres Bilgisi Ekle</a>
            </div>
        </div>
    </div>
</div>
